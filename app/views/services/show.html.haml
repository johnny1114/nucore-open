= content_for :breadcrumb do
  %ul.horiz
    %li= link_to 'Home', :root
    %li== &raquo;
    %li= link_to h(current_facility), current_facility
    %li== &raquo;
    %li=h @service.name 

= content_for :h1 do
  =h @service.name

.wysiwyg= @service.description
- if @login_required
  - session[:requested_params] = request.fullpath
  %ul
    %li= link_to 'Login', new_user_session_path, :class => 'btn'
- elsif @add_to_cart
  %ul
    %li= link_to 'Add to cart', add_order_path(acting_user.cart(session_user), :order => {:order_details => [{:product_id => @service.id, :quantity => 1}] }), :method => :put, :class => 'btn'

- docs = @service.stored_files.info
- unless docs.empty?
  %h3 Documentation
  %ul
    - docs.each do |stored_file|
      %li.document= link_to stored_file.name, stored_file.file.url
