- content_for :h1 do
  =h current_facility

- content_for :sidebar do
  = render :partial => 'admin/shared/sidenav_billing', :locals => { :sidenav_tab => 'send_statements' }

%h2 Send Statements
- unless @accounts.empty?
  %p Please review the following accounts; a statement notification email will be sent to the selected accounts.
  - form_tag(email_facility_statements_path, :method => :post) do
    %table
      %tr.borderless
        %td{:colspan => 2}= link_to 'Select All', 'JavaScript:void(0);', :class => 'select_all'
        %td
        %td
        %td
        %td= submit_tag "Send Statements"
      %tr
        %th
        %th Account
        %th Owner
        %th Last Statement
        %th Balance
        %th Notify
      -@accounts.each do |a|
        - statement = a.statements.find(:first, :conditions => {:facility_id => current_facility.id})
        %tr
          %td= check_box_tag "account_ids[]", a.id, false, {:class => 'toggle'}
          %td= link_to a, facility_account_statement_path(current_facility, a, 'recent')
          %td=h a.owner_user.full_name
          %td=h (statement.nil? ? 'never' : human_datetime(statement.created_at))
          %td=h number_to_currency a.facility_balance_including_pending(current_facility)
          %td
            %ul
              - a.notify_users.each do |u|
                %li=h u.email
      %tr.borderless
        %td
        %td
        %td
        %td
        %td
        %td= submit_tag "Send Statements"
