- if @user.nil? && params[:has_netid] == 'yes'
  %p.notice= t('.notice1')
- elsif @user.nil?
  %p.notice= t('.notice2')
  %p= t('.main_html', :link => new_facility_user_path(current_facility))
- elsif @user_already_exists
  %p.notice The user #{@user.username} already exists in NUCore
- else
  %p.notice= t('.notice3')
  %table
    %tr
      %th
      %th Username
      %th Last Name
      %th First Name
      %th Email
    %tr
      %td= link_to 'Add User', new_search_facility_users_path(current_facility, {:username => @user.username})
      %td= @user.username
      %td= @user.last_name
      %td= @user.first_name
      %td= @user.email
