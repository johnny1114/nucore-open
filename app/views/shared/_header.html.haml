.container_12
  .grid_3
    = link_to (current_user && current_user.operator? ? t(:app_admin_name) : t(:app_name)), :root, :id => 'logo'
  .grid_9
    %ul
      - if session_user.nil?
        %li.last= link_to t("pages.login"), :new_user_session
      - elsif acting_as?
        %li#user= "#{acting_user.full_name} (#{acting_user.username})"
        %li.last
          = link_to t('pages.cart'), :cart
          (
          = current_cart.order_details.sum(:quantity)
          )
      - else
        %li#user= "#{session_user.full_name} (#{session_user.username})"
        - if current_user.external?
          %li= link_to t("user_password.edit.head"), :edit_current_password 
        %li
          = link_to t('pages.cart'), :cart
          (
          = current_cart.order_details.sum(:quantity)
          )
        %li.last= link_to t('pages.logout'), :destroy_user_session
  .clear
