= content_for :h1 do
  =h current_facility
= content_for :sidebar do
  = render :partial => 'admin/shared/sidenav_billing', :locals => { :sidenav_tab => 'accounts' }

= content_for :head_content do
  %script{:type => 'text/javascript', :src => "#{request.protocol}ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js"}
  = javascript_include_tag 'accounts.js'
  = stylesheet_link_tag "jquery-ui/jquery-ui"


%h2== Edit #{@account}
= form_for([current_facility, @account], :url => facility_account_path(current_facility, @account)) do |f|
  = f.error_messages
  = render :partial => 'account_fields', :locals => {:f => f, :instructions_for => @account.class.name}
  %ul.horiz
    %li= f.submit 'Save', :class => 'btn'
    %li= link_to 'Cancel', facility_account_path
