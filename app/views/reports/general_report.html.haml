= content_for :head_content do
  = stylesheet_link_tag 'reports'
  = render :partial => 'report_head'
  :javascript
    $(function() {
      initGeneralReportsUI(#{@selected_index});
    });

= content_for :h1 do
  =h current_facility

%p.error#error-msg

= form_tag request.fullpath, :remote => true, :id => 'refresh-form'  do
  %ul#filter.options
    %li
      %label Start Date
      = text_field_tag :date_start, params[:date_start] || human_datetime(@date_start, :date_only => true), :class => 'datepicker'
    %li
      %label End Date
      = text_field_tag :date_end, params[:date_end] || human_datetime(@date_end, :date_only => true), :class => 'datepicker'
    %li
      %label Order Status
      %select{ :name => "status_filter", :class => 'sync_select', :id => 'status_filter' }
        = options_for_select([['All', '-1']])
        - OrderStatus.non_protected_statuses(current_facility).each do |os|
          = options_for_select([[os.name_with_level, os.id]], @selected_status_id)
    
  %ul#control.options
    %li
      = link_to 'Export', '#', :id => 'export'
    %li
      = link_to 'Export All', '#', :id => 'export-all'
      
  %div#tabs
    %ul
      %li
        %a{:href => product_facility_reports_path }
          %span Product
      %li
        %a{:href => account_facility_reports_path }
          %span Account
      %li
        %a{:href => account_owner_facility_reports_path }
          %span Account Owner
      %li
        %a{:href => purchaser_facility_reports_path }
          %span Purchaser
      %li
        %a{:href => price_group_facility_reports_path }
          %span Price Group




