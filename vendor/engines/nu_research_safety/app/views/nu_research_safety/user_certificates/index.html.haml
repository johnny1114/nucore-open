= content_for :h1 do
  = current_facility

= content_for :sidebar do
  = render "admin/shared/sidenav_users", sidenav_tab: "users"

= content_for :tabnav do
  = render "admin/shared/tabnav_users", secondary_tab: "user_certificates"

%h1
  = text("title", name: @user.full_name)

- if @available_certificates.any?
  = form_for :user_certificate, url: check_certificate_facility_user_user_certificates_path do |form|
    %table.table.table-striped.table-hover
      - @available_certificates.each do |cert|
        %tr
          %td
            = radio_button_tag(:certificate_id, cert.id)
          %td
            = label_tag("certificate_id_#{cert.id}".to_sym, cert.name)

    = submit_tag text("submit"), class: ["btn", "btn-primary"]
- else
  %p.notice= text("none")
