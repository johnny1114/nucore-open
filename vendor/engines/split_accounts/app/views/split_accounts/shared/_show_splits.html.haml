- if account.respond_to?(:splits) && account.splits.present?

  %h3= SplitAccounts::Split.model_name.human(count: 2)

  %table.table.table-striped
    %thead
      %tr
        %th= SplitAccounts::Split.human_attribute_name(:subaccount)
        %th= SplitAccounts::Split.human_attribute_name(:percent)
        %th= SplitAccounts::Split.human_attribute_name(:apply_remainder)
    %tbody
      - account.splits.each do |split|
        %tr
          %td= split.subaccount
          %td= split.percent
          %td= t_boolean(split.apply_remainder?)
